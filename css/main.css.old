html {
  min-height: 100%;
  position: relative;
}

body {
  background: #1c2833;
  color: #eaf2f8;
  margin-bottom: 2em;
}

#site-title {
  font-family: 'Oswald', sans-serif;
}

.nav {
  max-width: 450px;
  margin: auto;
  border-top: 2px solid #fff9c4;
  border-bottom: 2px solid #fff9c4;
}

.nav-link {
  font-size: 18px;
}

a {
  color: #fff9c4;
  font-weight: bold;
}

a:hover {
  color: #fff171;
  text-decoration: none;
}


/* Stop line width going past 66 character */

.row {
  margin: auto;
  max-width: 1600px;
}

.content {
  margin-top: 1em;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
}

footer div {
  max-width: 450px;
  border-top: 2px solid #fff9c4;
  border-bottom: 2px solid #fff9c4;
  margin: auto;
}
