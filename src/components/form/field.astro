---
type Props = {
	for: string;
	label: string;
	labelVisibility?: 'visible' | 'hidden';
};

const { for: htmlFor, label, labelVisibility } = Astro.props;
---

<div class="flex flex-col gap-2">
	<label class={labelVisibility === 'hidden' ? 'sr-only' : 'self-start'} for={htmlFor}>
		{label}
	</label>
	<slot />
</div>
